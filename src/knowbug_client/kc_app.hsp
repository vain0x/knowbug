	}

	dialog "ソースファイルをエクスプローラーで開きますか？", dialog_yesno
	if stat != dialog_yes {
		return false
	}

	source_dir = getpath(source_path, getpath_dir)
	chdir source_dir
	exec "explorer /select," + source_path + "\""
	return true

