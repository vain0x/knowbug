	cnvstow os_text, name

	dim lvitem, 15
	lvitem(0) = LVIF_TEXT
	lvitem(1) = row_index
	lvitem(2) = 0
	lvitem(5) = varptr(os_text)
	sendmsg s_list_view_hwnd, LVM_SETITEMW, , varptr(lvitem)
	assert stat

	cnvstow os_text, value

	dim lvitem, 15
	lvitem(0) = LVIF_TEXT
	lvitem(1) = row_index
	lvitem(2) = 1
	lvitem(5) = varptr(os_text)
	sendmsg s_list_view_hwnd, LVM_SETITEMW, , varptr(lvitem)
